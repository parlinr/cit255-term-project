<Page x:ConnectionId='1'
    x:Class="TermProject.PasserPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:TermProject"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:data="using:TermProject"
    mc:Ignorable="d">

    <Page.Resources>
        <DataTemplate x:Key="PasserListDataTemplate"                         >
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="100"/>
                    
                    <ColumnDefinition Width="100"/>
                    <ColumnDefinition Width="100"/>
                    <ColumnDefinition Width="100"/>
                    <ColumnDefinition Width="100"/>
                    <ColumnDefinition Width="100"/>
                    <ColumnDefinition Width="100"/>
                    <ColumnDefinition Width="100"/>
                    <ColumnDefinition Width="100"/>
                    
                </Grid.ColumnDefinitions>
                <TextBlock Grid.Column="0" Text="{Binding Score}"/>
                <TextBlock Grid.Column="1" Text="{Binding LastName}"/>
                <TextBlock Grid.Column="2" Text="{Binding FirstName}"/>
                <TextBlock Grid.Column="3" Text="{Binding TeamNameLong}"/>
                <TextBlock Grid.Column="4" Text="{Binding TeamNameShort}"/>
                <TextBlock Grid.Column="5" Text="{Binding Yards}"/>
                <TextBlock Grid.Column="6" Text="{Binding Touchdowns}"/>
                <TextBlock Grid.Column="7" Text="{Binding Interceptions}"/>
                <TextBlock Grid.Column="8" Text="{Binding RecordNumber}"/>
            </Grid>
        </DataTemplate>
    </Page.Resources>

    
    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition  Width="*" />
        </Grid.ColumnDefinitions>

        
        <ContentDialog x:ConnectionId='2' x:Name="addPasserDialog"
                       PrimaryButtonText="Add"
                       IsPrimaryButtonEnabled="True"
                       IsSecondaryButtonEnabled="True"
                       SecondaryButtonText="Cancel"
                       Title="Add Passer">
            <StackPanel>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <TextBlock Grid.Row="0" Grid.ColumnSpan="2" TextWrapping="WrapWholeWords">
                        Fill out the fields below to create a new passer.
                    </TextBlock>
                    <StackPanel Orientation="Horizontal" Grid.Column="0" Grid.Row="1">
                        <TextBlock Grid.Column="0" Grid.Row="1" HorizontalAlignment="Left">Score</TextBlock>
                        <TextBox x:ConnectionId='32'  Name="scoreTextBox" Grid.Column="0" Grid.Row="1"  HorizontalAlignment="Right"></TextBox>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Grid.Column="1" Grid.Row="1">
                        <TextBlock Grid.Column="1" Grid.Row="1" HorizontalAlignment="Left">Last Name</TextBlock>
                        <TextBox x:ConnectionId='31'  Name="lastNameTextBox" Grid.Column="1" Grid.Row="1"  HorizontalAlignment="Right"></TextBox>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Grid.Column="0" Grid.Row="2">
                        <TextBlock Grid.Column="0" Grid.Row="2" HorizontalAlignment="Left">First Name</TextBlock>
                        <TextBox x:ConnectionId='30' Name="firstNameTextBox" Grid.Column="0" Grid.Row="2"  HorizontalAlignment="Right"></TextBox>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Grid.Column="1" Grid.Row="2">
                        <TextBlock Grid.Column="1" Grid.Row="2" HorizontalAlignment="Left">Team Name Long</TextBlock>
                        <TextBox x:ConnectionId='29' Name="teamNameLongTextBox" Grid.Column="1" Grid.Row="2"  HorizontalAlignment="Right"></TextBox>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Grid.Column="0" Grid.Row="3">
                        <TextBlock Grid.Column="0" Grid.Row="3" HorizontalAlignment="Left">Team Name Short</TextBlock>
                        <TextBox x:ConnectionId='28' Name="teamNameShortTextBox" Grid.Column="0" Grid.Row="3"  HorizontalAlignment="Right"></TextBox>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Grid.Column="1" Grid.Row="3">
                        <TextBlock Grid.Column="1" Grid.Row="3" HorizontalAlignment="Left">Yards</TextBlock>
                        <TextBox x:ConnectionId='27' Name="yardsTextBox" Grid.Column="1" Grid.Row="3"  HorizontalAlignment="Right"></TextBox>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Grid.Column="0" Grid.Row="4">
                        <TextBlock Grid.Column="0" Grid.Row="4" HorizontalAlignment="Left">Touchdowns</TextBlock>
                        <TextBox x:ConnectionId='26' Name="touchdownsTextBox" Grid.Column="0" Grid.Row="4" HorizontalAlignment="Right"></TextBox>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Grid.Column="1" Grid.Row="4">
                        <TextBlock Grid.Column="1" Grid.Row="4" HorizontalAlignment="Left">Interceptions</TextBlock>
                        <TextBox x:ConnectionId='25' Name="interceptionsTextBox" Grid.Column="1" Grid.Row="4"  HorizontalAlignment="Right"></TextBox>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Grid.Column="0" Grid.Row="5">
                        <TextBlock Grid.Column="0" Grid.Row="5" HorizontalAlignment="Left">Record Number</TextBlock>
                        <TextBox x:ConnectionId='24' Name="recordNumberTextBox" Grid.Column="0" Grid.Row="5" HorizontalAlignment="Right"></TextBox>
                    </StackPanel>

                </Grid>
            </StackPanel>
        </ContentDialog>

        <ContentDialog x:ConnectionId='3' x:Name="updatePasserDialog"
                       PrimaryButtonText="Update"
                       IsPrimaryButtonEnabled="True"
                       IsSecondaryButtonEnabled="True"
                       SecondaryButtonText="Cancel"
                       Title="Update Passer">
            <StackPanel>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <TextBlock Grid.Row="0" Grid.ColumnSpan="2" TextWrapping="WrapWholeWords">
                        Fill out the fields below to update a passer.
                    </TextBlock>
                    <StackPanel Orientation="Horizontal" Grid.Column="0" Grid.Row="1">
                        <TextBlock Grid.Column="0" Grid.Row="1" HorizontalAlignment="Left">Score</TextBlock>
                        <TextBox x:ConnectionId='23'  Name="updateScoreTextBox" Grid.Column="0" Grid.Row="1"  HorizontalAlignment="Right"></TextBox>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Grid.Column="1" Grid.Row="1">
                        <TextBlock Grid.Column="1" Grid.Row="1" HorizontalAlignment="Left">Last Name</TextBlock>
                        <TextBox x:ConnectionId='22'  Name="updateLastNameTextBox" Grid.Column="1" Grid.Row="1"  HorizontalAlignment="Right"></TextBox>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Grid.Column="0" Grid.Row="2">
                        <TextBlock Grid.Column="0" Grid.Row="2" HorizontalAlignment="Left">First Name</TextBlock>
                        <TextBox x:ConnectionId='21' Name="updateFirstNameTextBox" Grid.Column="0" Grid.Row="2"  HorizontalAlignment="Right"></TextBox>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Grid.Column="1" Grid.Row="2">
                        <TextBlock Grid.Column="1" Grid.Row="2" HorizontalAlignment="Left">Team Name Long</TextBlock>
                        <TextBox x:ConnectionId='20' Name="updateTeamNameLongTextBox" Grid.Column="1" Grid.Row="2"  HorizontalAlignment="Right"></TextBox>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Grid.Column="0" Grid.Row="3">
                        <TextBlock Grid.Column="0" Grid.Row="3" HorizontalAlignment="Left">Team Name Short</TextBlock>
                        <TextBox x:ConnectionId='19' Name="updateTeamNameShortTextBox" Grid.Column="0" Grid.Row="3"  HorizontalAlignment="Right"></TextBox>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Grid.Column="1" Grid.Row="3">
                        <TextBlock Grid.Column="1" Grid.Row="3" HorizontalAlignment="Left">Yards</TextBlock>
                        <TextBox x:ConnectionId='18' Name="updateYardsTextBox" Grid.Column="1" Grid.Row="3"  HorizontalAlignment="Right"></TextBox>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Grid.Column="0" Grid.Row="4">
                        <TextBlock Grid.Column="0" Grid.Row="4" HorizontalAlignment="Left">Touchdowns</TextBlock>
                        <TextBox x:ConnectionId='17' Name="updateTouchdownsTextBox" Grid.Column="0" Grid.Row="4" HorizontalAlignment="Right"></TextBox>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Grid.Column="1" Grid.Row="4">
                        <TextBlock Grid.Column="1" Grid.Row="4" HorizontalAlignment="Left">Interceptions</TextBlock>
                        <TextBox x:ConnectionId='16' Name="updateInterceptionsTextBox" Grid.Column="1" Grid.Row="4"  HorizontalAlignment="Right"></TextBox>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Grid.Column="0" Grid.Row="5">
                        <TextBlock Grid.Column="0" Grid.Row="5" HorizontalAlignment="Left">Record Number</TextBlock>
                        <TextBox x:ConnectionId='15' Name="updateRecordNumberTextBox" Grid.Column="0" Grid.Row="5" HorizontalAlignment="Right"></TextBox>
                    </StackPanel>

                </Grid>
            </StackPanel>
        </ContentDialog>

        <ContentDialog x:ConnectionId='4' x:Name="deletePasserDialog"
                       IsPrimaryButtonEnabled="True"
                       IsSecondaryButtonEnabled="True"
                       PrimaryButtonText="Delete"
                       SecondaryButtonText="Cancel"
                       Title="Delete Passer">
            <StackPanel>
            <TextBlock>Enter the passer's Record Number in the box to delete the passer record.</TextBlock>
            <TextBox x:ConnectionId='14' Name="recordNumberInput"></TextBox>
            </StackPanel>
        </ContentDialog>

        <ContentDialog x:ConnectionId='5' x:Name="selectPasserByRecordNumberDialog"
                       IsPrimaryButtonEnabled="True"
                       IsSecondaryButtonEnabled="True"
                       PrimaryButtonText="Select"
                       SecondaryButtonText="Cancel"
                       Title="Select Passer by Record Number">
            <StackPanel>
                <TextBlock>Enter the passer's Record Number in the box to select the passer record.</TextBlock>
                <TextBox x:ConnectionId='13' Name="selectRecordNumberInput"></TextBox>
            </StackPanel>
        </ContentDialog>



        <GridView x:ConnectionId='6' ItemTemplate="{StaticResource PasserListDataTemplate}"
                                                             
                  Grid.Column="0">

            <GridView.ItemsPanel>
                <ItemsPanelTemplate>

                </ItemsPanelTemplate>
            </GridView.ItemsPanel>



        </GridView>
        <GridView Grid.Column="1">
            <Button x:ConnectionId='7' Content="Get all passers"                                     />
            <Button x:ConnectionId='8' Content="Clear screen"                                   />
            <Button x:ConnectionId='9' Content="Add passer"                                 />
            <Button x:ConnectionId='10' Content="Delete passer"                                    />
            <Button x:ConnectionId='11' Content="Update passer"                                    />
            <Button x:ConnectionId='12' Content="Select passer by Record Number"                                                  />
            
        </GridView>
        
       








    </Grid>
</Page>

